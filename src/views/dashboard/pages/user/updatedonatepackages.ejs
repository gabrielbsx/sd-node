<div class="col-md-12 grid-margin stretch-card donate-packages">
    <div class="card">
        <div class="card-body">
            <div class="d-flex flex-row justify-content-between border-bottom">
                Lista de pacotes de doações
            </div>
            <div class="d-flex flex-row row px-4 justify-content-center my-2 py-4 text-center list-donate-packages">
                <div class="row">
                    <form method="POST" action="/update-donate-packages">
                        <div class="form-group mb-3">
                            <input class="form-control" type="hidden" name="id" value="<%= data.id %>">
                            <label for="name">Nome do pacote:</label>
                            <input id="name" class="form-control" name="name" value="<%= data.name %>">
                        </div>
                        <div class="form-group mb-3">
                            <label for="value">Valor [R$]:</label>
                            <input id="value" class="form-control" type="number" name="value" value="<%= data.value %>">
                        </div>
                        <div class="form-group mb-3">
                            <label for="donate">Valor donate:</label>
                            <input id="donate" class="form-control" type="number" name="donate" value="<%= data.donate %>">
                        </div>
                        <div class="form-group mb-3">
                            <label for="percent">Porcentagem/Bônus:</label>
                            <input id="percent" class="form-control" type="number" name="percent" value="<%= data.percent %>">
                        </div>
                        <input type="hidden" class="g-recaptcha-response" name="g-recaptcha-response">
                        <input type="hidden" name="action" value="validate_captcha">
                        <div class="form-group mb-3">
                            <button type="submit" class="btn btn-primary">
                                Alterar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>