<div class="col-md-8 p-0 m-0">
    <div class="col-md-12 my-2">
        <div class="col-md-12 py-3 bg-warning text-dark text-uppercase font-weight-bold">
            Painel de controle - alterar senha
        </div>
        <div style="background-color: rgba(0,0,0,0.5);" class="text-light py-4">
            <form class="px-5" method="post" action="/painel-de-controle/guildmark">
                <div class="input-group my-1">
                    <input class="form-control" name="oldpassword" placeholder="Senha antiga">
                </div>
                <div class="input-group my-1">
                    <input class="form-control" name="password" placeholder="Nova senha">
                </div>
                <div class="input-group my-1">
                    <input class="form-control" name="confirm_password" placeholder="Confirmar nova senha">
                </div>
                <input type="hidden" class="g-recaptcha-response" name="g-recaptcha-response">
                <input type="hidden" name="action" value="validate_captcha">
                <div class="input-group mt-1 justify-content-center  ">
                    <button class="btn btn-primary">
                        Alterar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>