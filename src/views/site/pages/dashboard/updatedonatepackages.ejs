<div class="col-md-8 p-0 m-0">
    <div class="col-md-12 my-2">
        <div class="col-md-12 py-3 bg-warning text-dark text-uppercase font-weight-bold">
            Painel de controle - editar pacote de doações
        </div>
        <div style="background-color: rgba(0,0,0,0.5);" class="text-light py-4 px-5">
            <% if (typeof data !== 'undefined') { %>
                <form method="post" action="/painel-de-controle/editar-pacote-de-doacoes/<%= data.slug %>">
                    <div class="form-group">
                        <input name="name" type="text" class="form-control" placeholder="Nome" value="<%= data.name %>">
                    </div>
                    <div class="form-group">
                        <input name="slug" type="text" class="form-control" placeholder="Slug" value="<%= data.slug %>">
                    </div>
                    <div class="form-group">
                        <input name="percent" type="text" class="form-control" placeholder="Porcentagem" value="<%= data.percent %>">
                    </div>
                    <div class="form-group">
                        <input name="value" type="text" class="form-control" placeholder="Valor" value="<%= data.value %>">
                    </div>
                    <div class="form-group">
                        <input name="donate" type="text" class="form-control" placeholder="Cash" value="<%= data.donate %>">
                    </div>
                    <input type="hidden" class="g-recaptcha-response" name="g-recaptcha-response">
                    <input type="hidden" name="action" value="validate_captcha">
                    <div class="form-group">
                        <button class="btn btn-primary">
                            Editar
                        </button>
                    </div>
                </form>
            <% } else { %>
                Não encontrada!
            <% } %>
        </div>
    </div>
</div>